<input id="display1" />

@section scripts
{
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/jquery.transform.js"></script>
    <script src="~/Scripts/jquery.flapper.js"></script>

    <script>
        $(function () {
            var options = {
                width: 12, // number of digits
                align: 'right', // aligns values to the left or right of display
                chars_preset: 'alphanum', // 'num', 'hexnum', 'alpha' or 'alphanum'
                timing: 500,
                transform: true // Flapper automatically detects the jquery.transform
            };
            $('#display1').flapper(options).val("SWAG LICIOUS").change();
        });
    </script>
}
