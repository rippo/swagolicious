<div class="row white paddding-btm">
    <div class="col-md-12">

        <h1>Swag</h1>
        
        <form role="form" class="form" action="index">
            <table class="table table-striped table-condensed" data-bind='visible: swagList().length > 0'>
                <thead>
                    <tr>
                        <th>Swag</th>
                        <th>Quantity</th>
                        <th />
                    </tr>
                </thead>
                <tbody data-bind='foreach: swagList'>
                    <tr>
                        <td class="col-xs-8"><input class='required form-control' data-bind='value: Name, uniqueName: true' /></td>
                        <td class="col-xs-2"><input class='required number form-control' data-bind='value: Quantity, uniqueName: true' /></td>
                        <td class="col-xs-2"><a class="btn btn-default" role="button" href='#' data-bind='click: $root.removeSwag'>Delete</a></td>
                    </tr>
                </tbody>
            </table>

            <button class="btn" data-bind='click: addSwag'>Add Swag</button>
            <button class="btn btn-primary" data-bind='enable: swagList().length > 0' type='submit'>Submit</button>
        </form>
    </div>
</div>



@section scripts
{
    <script src="~/Scripts/jquery-2.0.3.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/knockout-3.0.0.debug.js"></script>
    <script src="~/Scripts/swag.js"></script>
}